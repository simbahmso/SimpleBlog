@model SimpleBlog.ViewModels.AuthLogin

@{
    ViewBag.Title = "Login";
}

<h3>This is the LOGIN View!</h3>

<p>
    The value of test in our model, is: @Model.Test
</p>

@using (Html.BeginForm())
{
    @Html.ValidationSummary()

    <div>
        @Html.LabelFor(x => x.Username)
        @Html.EditorFor(x => x.Username)
    </div>

    <div>
        @Html.LabelFor(x => x.Password)
        @Html.EditorFor(x => x.Password)
    </div>

    <div>
        <input type="submit" value="Login"/>
    </div>
}

<p>
    <a href="@Url.RouteUrl("Index")">Click here</a> for Admin Posts!
</p>

<p>
    @Html.RouteLink("Click here", "Index") to view Admin Posts!
</p>

